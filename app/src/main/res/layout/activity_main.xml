<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_backgraoud"
    tools:context=".view.MainTopActivity">

    <Button
        android:id="@+id/btn_top_start"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/system_button_design_selector"
        android:stateListAnimator="@drawable/system_button_anim_selector"
        android:text="@string/btn_start_memo"
        android:textColor="@color/system_text_color_selector"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_top_today_item"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/system_button_design_selector"
        android:stateListAnimator="@drawable/system_button_anim_selector"
        android:text="@string/btn_today_item"
        android:textColor="@color/system_text_color_selector"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/btn_top_past_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_top_past_item"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/system_button_design_selector"
        android:stateListAnimator="@drawable/system_button_anim_selector"
        android:text="@string/btn_past_list"
        android:textColor="@color/system_text_color_selector"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>